{
  "name": "paffme",
  "version": "1.16.2",
  "description": "paffme",
  "main": "dist/src/main.js",
  "scripts": {
    "start:dev": "ts-node src/main.ts",
    "start:watch": "nodemon",
    "build": "rimraf dist && tsc && npm run copy-assets",
    "start:prod": "node .",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives \"**/*.ts\"",
    "eslint:fix": "npm run eslint -- --fix",
    "test": "jest --forceExit --coverage",
    "migrate": "ts-node src/migrate.ts",
    "copy-assets": "cp -Rv assets/ dist/assets/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:paffme/backend.git"
  },
  "dependencies": {
    "@nestjs/common": "^7.2.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.2.0",
    "@nestjs/platform-socket.io": "^7.2.0",
    "@nestjs/swagger": "^4.5.11",
    "@nestjs/websockets": "^7.2.0",
    "accesscontrol": "^2.2.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "config": "^3.3.1",
    "ee-ts": "^1.0.2",
    "helmet": "^3.23.2",
    "http-link-header": "^1.0.2",
    "mikro-orm": "^3.6.15",
    "morphism": "^2.2.3",
    "ms": "^2.1.2",
    "nestjs-mikro-orm": "^1.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pdfmake": "^0.1.65",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "socket.io-redis": "^5.3.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^9.0.1",
    "@nestjs/testing": "^7.2.0",
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.6",
    "@types/gm": "^1.18.8",
    "@types/helmet": "^0.0.47",
    "@types/http-link-header": "^1.0.1",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/ms": "^0.7.31",
    "@types/multer": "^1.4.3",
    "@types/node": "^12.12.47",
    "@types/passport-jwt": "^3.0.3",
    "@types/pdfmake": "^0.1.14",
    "@types/socket.io": "^2.1.8",
    "@types/socket.io-client": "^1.4.33",
    "@types/socket.io-redis": "^1.0.26",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-plugin": "^2.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "gm": "^1.23.1",
    "jest": "^26.1.0",
    "p-event": "^4.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "config/test.ts",
      "!src/migrate.ts"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  }
}
